{% extends '/models/backOffice.html.twig' %}

{% block title %} Management {% endblock %}

{% block module %}user-manage{% endblock %}

{% block content %}

    <!-- Users -->
    <div class="list">
        <!-- search -->
        <form name="search-form">
            <input type="text" name="search" placeholder="  Rechercher ..."/>
            <button type="button" name="submit"> S </button>
        </form>
        <!-- user list -->
        <div class="users-list">
            {% for user in users %}
                <!-- user -->
                <div class="user">
                    <!-- picture -->
                    <div class="pic"> <img src="" /> </div>
                    <!-- data -->
                    <div class="data"> 
                        <div> {{ user.lastname }} </div>
                        <div> {{ user.firstname }} </div>
                        <div> {{ user.email }} </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <!-- Update -->
    <div class="update">
        <!-- users -->
        {% for user in users %}
            <!-- user -->
            <div class="user">

              <div class="infos">
                <form name="">
                    <div class="inputs">
                        <input type="text" name="lastname" placeholder="Nom" value="{{ user.lastname }}" /> 
                        <input type="text" name="firstname" placeholder="Prénom" value="{{ user.firstname }}" /> 
                        <input type="text" name="email" placeholder="Email" value="{{ user.email }}" /> 
                        <input type="text" name="phone" placeholder="Téléphone" value="{{ user.phone }}" /> 
                        <input type="text" name="adress" placeholder="Adresse" value="{{ user.address }}" /> 
                        <input type="text" name="cp" placeholder="Code Postal" value="{{ user.cp }}" /> 
                    </div>

                    <div class="buttons">
                        <button class="update"> METTRE À JOUR </button>
                        <button class="delete"> SUPPRIMER </button>
                    </div>
                </form>
              </div> 

              <div class="roles">
                div 2
              </div> 

              <div class="projects">
                div 3
              </div> 

            </div>
        {% endfor %}
        

    </div>

{% endblock %}